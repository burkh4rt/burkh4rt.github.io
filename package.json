{
  "author": "Michael C. Burkhart",
  "browserslist": [
    "defaults"
  ],
  "description": "Michael's personal website",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "clean-css": "^4.2.3",
    "clean-css-cli": "^4.3.0",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "imagemin-cli": "^5.1.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webp": "^5.1.0",
    "node-sass": "^4.13.1",
    "normalize.css": "^8.0.1",
    "npm": "^6.13.7",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "serve": "^11.3.0",
    "terser": "^4.6.3"
  },
  "engines": {
    "node": "^12.13.1"
  },
  "license": "UNLICENSED",
  "name": "@burkh4rt/menagerie",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:burkh4rt/burkh4rt.github.io.git"
  },
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "scss": "node-sass --output-style compressed --include-path ./node_modules/ --include-path ./src src/main.scss -o dist/",
    "cleancss": "cleancss -O1 'all:on;specialComments:0' -O2 'all:on' -o dist/main.css dist/main.css",
    "build:css": "run-s scss autoprefixer cleancss",
    "build:img": "imagemin 'assets/img/*.[^jpg]!' --out-dir=dist/img/",
    "build:jpg:moz": "imagemin --plugin=mozjpeg --plugin.mozjpeg.progressive=true --plugin.mozjpeg.quality=100 'assets/img-optimized/*.jpg' --out-dir=dist/img-optimized/",
    "build:jpg:webp": "imagemin --plugin=webp --plugin.webp.quality=100 --plugin.webp.method=6 'assets/img-optimized/*.jpg' --out-dir=dist/img-optimized/",
    "build:html": "html-minifier --collapse-whitespace --remove-comments --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true --input-dir src/ --output-dir ./ --file-ext html",
    "build:js": "terser src/*.js --compress --comments false --mangle -o dist/min.js",
    "pretty:html": "js-beautify --replace --type 'html' --file src/*.html",
    "pretty:scss": "prettier --write 'src/**/*.scss'",
    "pretty:js": "prettier --write 'src/**/*.js'",
    "build": "run-p build:**",
    "pretty": "run-p pretty:*",
    "make": "run-s build pretty"
  },
  "version": "1.0.1"
}
