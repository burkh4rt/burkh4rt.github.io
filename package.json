{
  "author": "Michael C. Burkhart",
  "description": "Michael's personal website",
  "browserslist": [
      "defaults"
  ],
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "clean-css": "^4.2.1",
    "clean-css-cli": "^4.3.0",
    "glob": "^7.1.5",
    "html-minifier": "^4.0.0",
    "imagemin-cli": "^5.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "node-sass": "^4.13.0",
    "normalize.css": "^8.0.1",
    "npm": "^6.12.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "serve": "^11.2.0"
  },
  "engines": {
    "node": ">= 12.13.0"
  },
  "license": "UNLICENSED",
  "name": "@burkh4rt/menagerie",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:burkh4rt/burkh4rt.github.io.git"
  },
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "scss": "node-sass --output-style compressed --include-path ./node_modules/ --include-path ./src src/main.scss -o dist/",
    "cleancss": "cleancss -O1 'all:on;specialComments:0' -O2 'all:on' -o dist/main.css dist/main.css",
    "build:css": "run-s scss autoprefixer cleancss",
    "build:img": "imagemin 'assets/img/*.[^jpg]!' --out-dir=dist/img/",
    "build:jpg": "imagemin --plugin=mozjpeg 'assets/img-optimized/*.jpg' --out-dir=dist/img-optimized/",
    "build:html": "html-minifier --collapse-whitespace --remove-comments --remove-tag-whitespace --use-short-doctype src/index.html -o index.html",
    "pretty:scss": "prettier --write 'src/**/*.scss'",
    "pretty:html": "js-beautify --replace --type 'html' --file src/*.html",
    "build": "run-p build:*",
    "pretty": "run-p pretty:*",
    "make": "run-s build pretty"
  },
  "version": "1.0.1"
}
